@model PersonalExampleWebPage.Models.ModelBase;
@{

    ViewData["Title"] = "Employee Editing";
  
}


<head>
    <style>
        #Btns{

            padding:3px 3px 3px 3px;
        }
    </style>
</head>
<h3 class="text-center">Make changes on existing employee</h3>

<br/>


<div class="form-control">

    <form asp-action="Makechanges" asp-controller="crud" method="post">
        <div>
            <label for"Id">Id</label>
            <input id="input" class="form-control" type="text" name="id" value="@Model.Id" readonly />

        </div>
        <div>
            <label for"Displayname">Display Name</label>
            <input id="input" class="form-control" type="text" name="name" value="@Model.DisplayName" />

        </div>

        <div>
            <label for"Address">Address</label>
            <input id="input" class="form-control" type="text" name="address" value="@Model.Address"/>

        </div>
        <div>
            <label for"Position">Position</label>
            <input id="input" class="form-control" type="text" name="position" value="@Model.Position"  />

        </div>
        <div>
            <label for"Salary">Salary</label>
            <input id="input" class="form-control" type="text" name="salary" value="@Model.Salary"/>
        </div>
        <div>
            <button class="btn btn-primary">Save</button>
            <button class="btn btn-primary" onclick="window.open('Https://localhost:7140')">Return To main page</button>
        </div>

    </form>
      
</div>